{
    "name": "boehsermoe/automerge",
    "description": "CLI tool to auto-merge git branches and tag.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bennet KlarhÃ¶lter",
            "email": "boehsermoe@me.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/yaml": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "AutoMerge\\": "src/"
        }
    },
    "bin": [
        "bin/automerge.php"
    ],
    "scripts": {
        "post-install-cmd": [
            "[ -L automerge ] || ln -s vendor/bin/automerge automerge"
        ],
        "post-update-cmd": [
            "[ -L automerge ] || ln -s vendor/bin/automerge automerge"
        ]
    },
    "minimum-stability": "stable"
}
